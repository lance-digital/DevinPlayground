{
  "name": "vscode-token-counter",
  "displayName": "Token Counter",
  "description": "VSCodeサイドバーでファイルとフォルダのトークン数を表示",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "tokenCounterExplorer",
          "name": "トークンカウント付き",
          "when": "workspaceFolderCount != 0"
        }
      ]
    },
    "commands": [
      {
        "command": "tokenCounter.refresh",
        "title": "Refresh Token Counts",
        "icon": "$(refresh)"
      },
      {
        "command": "tokenCounter.newFile",
        "title": "New File",
        "icon": "$(new-file)"
      },
      {
        "command": "tokenCounter.newFolder",
        "title": "New Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "tokenCounter.rename",
        "title": "Rename",
        "icon": "$(edit)"
      },
      {
        "command": "tokenCounter.delete",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "tokenCounter.copy",
        "title": "Copy Path",
        "icon": "$(copy)"
      },
      {
        "command": "tokenCounter.cut",
        "title": "Cut",
        "icon": "$(clippy)"
      },
      {
        "command": "tokenCounter.paste",
        "title": "Paste",
        "icon": "$(clippy)"
      },
      {
        "command": "tokenCounter.duplicate",
        "title": "Duplicate",
        "icon": "$(copy)"
      },
      {
        "command": "tokenCounter.revealInExplorer",
        "title": "Reveal in File Explorer",
        "icon": "$(folder-opened)"
      },
      {
        "command": "tokenCounter.openInTerminal",
        "title": "Open in Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "tokenCounter.selectAll",
        "title": "Select All",
        "icon": "$(selection)"
      },
      {
        "command": "tokenCounter.collapseAll",
        "title": "Collapse All",
        "icon": "$(collapse-all)"
      },
      {
        "command": "tokenCounter.expandAll",
        "title": "Expand All",
        "icon": "$(expand-all)"
      },
      {
        "command": "tokenCounter.sortByName",
        "title": "Sort by Name",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "tokenCounter.sortBySize",
        "title": "Sort by Size",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "tokenCounter.sortByDate",
        "title": "Sort by Date",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "tokenCounter.sortByTokens",
        "title": "Sort by Token Count",
        "icon": "$(sort-precedence)"
      },
      {
        "command": "tokenCounter.toggleSortDirection",
        "title": "Toggle Sort Direction",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "tokenCounter.filterFiles",
        "title": "Filter Files",
        "icon": "$(filter)"
      },
      {
        "command": "tokenCounter.clearFilter",
        "title": "Clear Filter",
        "icon": "$(clear-all)"
      },
      {
        "command": "tokenCounter.openWith",
        "title": "Open With...",
        "icon": "$(file-code)"
      },
      {
        "command": "tokenCounter.compareSelected",
        "title": "Compare Selected",
        "icon": "$(diff)"
      },
      {
        "command": "tokenCounter.showProperties",
        "title": "Properties",
        "icon": "$(info)"
      },
      {
        "command": "tokenCounter.toggleHiddenFiles",
        "title": "Toggle Hidden Files",
        "icon": "$(eye)"
      },
      {
        "command": "tokenCounter.openInNewWindow",
        "title": "Open in New Window",
        "icon": "$(window)"
      },
      {
        "command": "tokenCounter.searchFiles",
        "title": "Search Files",
        "icon": "$(search)"
      },
      {
        "command": "tokenCounter.findInFiles",
        "title": "Find in Files",
        "icon": "$(search-view-icon)"
      },
      {
        "command": "tokenCounter.goToFile",
        "title": "Go to File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "tokenCounter.showFileHistory",
        "title": "Show File History",
        "icon": "$(history)"
      },
      {
        "command": "tokenCounter.selectItem",
        "title": "Select Item"
      },
      {
        "command": "tokenCounter.selectMultiple",
        "title": "Select Multiple Items"
      },
      {
        "command": "tokenCounter.getSelectedItems",
        "title": "Get Selected Items"
      },
      {
        "command": "tokenCounter.deleteSelected",
        "title": "Delete Selected Items",
        "icon": "$(trash)"
      },
      {
        "command": "tokenCounter.sortByName",
        "title": "Sort by Name",
        "icon": "$(symbol-text)"
      },
      {
        "command": "tokenCounter.sortBySize",
        "title": "Sort by Size",
        "icon": "$(symbol-numeric)"
      },
      {
        "command": "tokenCounter.sortByDate",
        "title": "Sort by Date Modified",
        "icon": "$(calendar)"
      },
      {
        "command": "tokenCounter.sortByTokens",
        "title": "Sort by Token Count",
        "icon": "$(symbol-number)"
      },
      {
        "command": "tokenCounter.toggleSortDirection",
        "title": "Toggle Sort Direction",
        "icon": "$(arrow-swap)"
      },
      {
        "command": "tokenCounter.showFileProperties",
        "title": "Properties",
        "icon": "$(info)"
      },
      {
        "command": "tokenCounter.openInNewWindow",
        "title": "Open in New Window",
        "icon": "$(window)"
      },
      {
        "command": "tokenCounter.revealInFileExplorer",
        "title": "Reveal in File Explorer",
        "icon": "$(folder-opened)"
      },
      {
        "command": "tokenCounter.openInIntegratedTerminal",
        "title": "Open in Integrated Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "tokenCounter.gitStageChanges",
        "title": "Stage Changes",
        "icon": "$(add)"
      },
      {
        "command": "tokenCounter.gitUnstageChanges",
        "title": "Unstage Changes",
        "icon": "$(remove)"
      },
      {
        "command": "tokenCounter.gitDiscardChanges",
        "title": "Discard Changes",
        "icon": "$(discard)"
      },
      {
        "command": "tokenCounter.gitViewChanges",
        "title": "View Changes",
        "icon": "$(diff)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "tokenCounter.newFile",
          "when": "view == tokenCounterExplorer && viewItem == folder",
          "group": "1_new@1"
        },
        {
          "command": "tokenCounter.newFolder",
          "when": "view == tokenCounterExplorer && viewItem == folder",
          "group": "1_new@2"
        },
        {
          "command": "tokenCounter.rename",
          "when": "view == tokenCounterExplorer",
          "group": "2_edit@1"
        },
        {
          "command": "tokenCounter.delete",
          "when": "view == tokenCounterExplorer",
          "group": "2_edit@2"
        },
        {
          "command": "tokenCounter.copy",
          "when": "view == tokenCounterExplorer",
          "group": "3_copy@1"
        },
        {
          "command": "tokenCounter.cut",
          "when": "view == tokenCounterExplorer",
          "group": "3_copy@2"
        },
        {
          "command": "tokenCounter.paste",
          "when": "view == tokenCounterExplorer && viewItem == folder",
          "group": "3_copy@3"
        },
        {
          "command": "tokenCounter.duplicate",
          "when": "view == tokenCounterExplorer",
          "group": "3_copy@4"
        },
        {
          "command": "tokenCounter.revealInExplorer",
          "when": "view == tokenCounterExplorer",
          "group": "4_reveal@1"
        },
        {
          "command": "tokenCounter.openInTerminal",
          "when": "view == tokenCounterExplorer && viewItem == folder",
          "group": "4_reveal@2"
        },
        {
          "command": "tokenCounter.openWith",
          "when": "view == tokenCounterExplorer && viewItem == file",
          "group": "5_open@1"
        },
        {
          "command": "tokenCounter.compareSelected",
          "when": "view == tokenCounterExplorer && viewItem",
          "group": "5_open@2"
        },
        {
          "command": "tokenCounter.showProperties",
          "when": "view == tokenCounterExplorer && viewItem",
          "group": "6_properties@1"
        },
        {
          "command": "tokenCounter.openInNewWindow",
          "when": "view == tokenCounterExplorer && viewItem == folder",
          "group": "4_reveal@3"
        }
      ],
      "view/title": [
        {
          "command": "tokenCounter.refresh",
          "when": "view == tokenCounterExplorer",
          "group": "navigation@1"
        },
        {
          "command": "tokenCounter.collapseAll",
          "when": "view == tokenCounterExplorer",
          "group": "navigation@2"
        },
        {
          "command": "tokenCounter.expandAll",
          "when": "view == tokenCounterExplorer",
          "group": "navigation@3"
        },
        {
          "command": "tokenCounter.filterFiles",
          "when": "view == tokenCounterExplorer",
          "group": "navigation@4"
        },
        {
          "command": "tokenCounter.sortByName",
          "when": "view == tokenCounterExplorer",
          "group": "5_sort@1"
        },
        {
          "command": "tokenCounter.sortBySize",
          "when": "view == tokenCounterExplorer",
          "group": "5_sort@2"
        },
        {
          "command": "tokenCounter.sortByDate",
          "when": "view == tokenCounterExplorer",
          "group": "5_sort@3"
        },
        {
          "command": "tokenCounter.sortByTokens",
          "when": "view == tokenCounterExplorer",
          "group": "5_sort@4"
        },
        {
          "command": "tokenCounter.toggleSortDirection",
          "when": "view == tokenCounterExplorer",
          "group": "5_sort@5"
        },
        {
          "command": "tokenCounter.toggleHiddenFiles",
          "when": "view == tokenCounterExplorer",
          "group": "navigation@5"
        },
        {
          "command": "tokenCounter.searchFiles",
          "when": "view == tokenCounterExplorer",
          "group": "navigation@6"
        },
        {
          "command": "tokenCounter.findInFiles",
          "when": "view == tokenCounterExplorer",
          "group": "7_search@1"
        },
        {
          "command": "tokenCounter.goToFile",
          "when": "view == tokenCounterExplorer",
          "group": "7_search@2"
        },
        {
          "command": "tokenCounter.deleteSelected",
          "when": "view == tokenCounterExplorer",
          "group": "2_file@6"
        },
        {
          "command": "tokenCounter.showFileProperties",
          "when": "view == tokenCounterExplorer && viewItem",
          "group": "9_properties@1"
        },
        {
          "command": "tokenCounter.openInNewWindow",
          "when": "view == tokenCounterExplorer && viewItem",
          "group": "8_window@1"
        },
        {
          "command": "tokenCounter.revealInFileExplorer",
          "when": "view == tokenCounterExplorer && viewItem",
          "group": "8_window@2"
        },
        {
          "command": "tokenCounter.openInIntegratedTerminal",
          "when": "view == tokenCounterExplorer && viewItem == folder",
          "group": "8_window@3"
        },
        {
          "command": "tokenCounter.gitStageChanges",
          "when": "view == tokenCounterExplorer && viewItem && gitOpenRepositoryCount != 0",
          "group": "git@1"
        },
        {
          "command": "tokenCounter.gitUnstageChanges",
          "when": "view == tokenCounterExplorer && viewItem && gitOpenRepositoryCount != 0",
          "group": "git@2"
        },
        {
          "command": "tokenCounter.gitDiscardChanges",
          "when": "view == tokenCounterExplorer && viewItem && gitOpenRepositoryCount != 0",
          "group": "git@3"
        },
        {
          "command": "tokenCounter.gitViewChanges",
          "when": "view == tokenCounterExplorer && viewItem && gitOpenRepositoryCount != 0",
          "group": "git@4"
        }
      ]
    },
    "keybindings": [
      {
        "command": "tokenCounter.rename",
        "key": "F2",
        "when": "view == tokenCounterExplorer && viewItem"
      },
      {
        "command": "tokenCounter.delete",
        "key": "Delete",
        "when": "view == tokenCounterExplorer && viewItem"
      },
      {
        "command": "tokenCounter.copy",
        "key": "ctrl+c",
        "when": "view == tokenCounterExplorer && viewItem"
      },
      {
        "command": "tokenCounter.cut",
        "key": "ctrl+x",
        "when": "view == tokenCounterExplorer && viewItem"
      },
      {
        "command": "tokenCounter.paste",
        "key": "ctrl+v",
        "when": "view == tokenCounterExplorer && viewItem == folder"
      },
      {
        "command": "tokenCounter.refresh",
        "key": "F5",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "tokenCounter.selectAll",
        "key": "ctrl+a",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "workbench.files.action.focusFilesExplorer",
        "key": "enter",
        "when": "view == tokenCounterExplorer && viewItem"
      },
      {
        "command": "list.toggleExpand",
        "key": "space",
        "when": "view == tokenCounterExplorer && viewItem == folder"
      },
      {
        "command": "list.focusUp",
        "key": "up",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "list.focusDown",
        "key": "down",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "list.focusFirst",
        "key": "home",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "list.focusLast",
        "key": "end",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "tokenCounter.searchFiles",
        "key": "ctrl+f",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "tokenCounter.findInFiles",
        "key": "ctrl+shift+f",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "tokenCounter.goToFile",
        "key": "ctrl+p",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "tokenCounter.clearSearch",
        "key": "escape",
        "when": "view == tokenCounterExplorer && tokenCounter.hasActiveSearch"
      },
      {
        "command": "tokenCounter.newFile",
        "key": "ctrl+shift+n",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "tokenCounter.newFolder",
        "key": "ctrl+shift+alt+n",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "tokenCounter.duplicate",
        "key": "ctrl+d",
        "when": "view == tokenCounterExplorer && viewItem"
      },
      {
        "command": "tokenCounter.collapseAll",
        "key": "ctrl+shift+left",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "tokenCounter.expandAll",
        "key": "ctrl+shift+right",
        "when": "view == tokenCounterExplorer"
      },
      {
        "command": "tokenCounter.gitStageChanges",
        "key": "ctrl+shift+a",
        "when": "view == tokenCounterExplorer && viewItem && gitOpenRepositoryCount != 0"
      },
      {
        "command": "tokenCounter.gitDiscardChanges",
        "key": "ctrl+shift+z",
        "when": "view == tokenCounterExplorer && viewItem && gitOpenRepositoryCount != 0"
      }
    ],
    "configuration": {
      "title": "Token Counter",
      "properties": {
        "tokenCounter.excludedFileTypes": {
          "type": "array",
          "default": [
            ".exe",
            ".dll",
            ".so",
            ".dylib",
            ".bin",
            ".obj",
            ".o",
            ".a",
            ".lib",
            ".zip",
            ".tar",
            ".gz",
            ".rar",
            ".7z",
            ".pdf",
            ".doc",
            ".docx",
            ".xls",
            ".xlsx",
            ".ppt",
            ".pptx",
            ".jpg",
            ".jpeg",
            ".png",
            ".gif",
            ".bmp",
            ".svg",
            ".ico",
            ".mp3",
            ".mp4",
            ".avi",
            ".mov",
            ".wmv",
            ".flv",
            ".wav",
            ".log"
          ],
          "description": "File extensions to exclude from token counting"
        },
        "tokenCounter.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size in bytes to process (default: 1MB)"
        },
        "tokenCounter.tokenSuffix": {
          "type": "string",
          "default": "トークン",
          "description": "Suffix to display after token count (e.g., 'トークン' for '[120トークン]')"
        },
        "tokenCounter.sortBy": {
          "type": "string",
          "enum": ["name", "size", "date", "tokens"],
          "default": "name",
          "description": "ファイルのソート方法"
        },
        "tokenCounter.sortDirection": {
          "type": "string",
          "enum": ["asc", "desc"],
          "default": "asc",
          "description": "ソート方向"
        },
        "tokenCounter.showHiddenFiles": {
          "type": "boolean",
          "default": false,
          "description": "隠しファイルを表示"
        },
        "tokenCounter.tokenizerType": {
          "type": "string",
          "enum": ["openai", "anthropic", "google", "fallback"],
          "default": "openai",
          "description": "使用するトークナイザーの種類"
        },
        "tokenCounter.openaiModel": {
          "type": "string",
          "enum": ["gpt-3.5-turbo", "gpt-4", "gpt-4o"],
          "default": "gpt-3.5-turbo",
          "description": "OpenAIモデルの選択"
        },
        "tokenCounter.anthropicModel": {
          "type": "string",
          "enum": ["claude-3-haiku", "claude-3-sonnet", "claude-3-opus"],
          "default": "claude-3-sonnet",
          "description": "Anthropicモデルの選択"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/vscode": "^1.96.0",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "tiktoken": "^1.0.21",
    "@anthropic-ai/tokenizer": "^0.0.4",
    "@google/generative-ai": "^0.24.1"
  }
}
