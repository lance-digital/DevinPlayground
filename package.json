{
  "name": "vscode-token-counter",
  "displayName": "Token Counter",
  "description": "VSCodeサイドバーでファイルとフォルダのトークン数を表示",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "tokenCounterExplorer",
          "name": "トークンカウント付き",
          "when": "workspaceFolderCount != 0"
        }
      ]
    },
    "commands": [
      {
        "command": "tokenCounter.refresh",
        "title": "Refresh Token Counts",
        "icon": "$(refresh)"
      }
    ],
    "configuration": {
      "title": "Token Counter",
      "properties": {
        "tokenCounter.excludedFileTypes": {
          "type": "array",
          "default": [
            ".exe",
            ".dll",
            ".so",
            ".dylib",
            ".bin",
            ".obj",
            ".o",
            ".a",
            ".lib",
            ".zip",
            ".tar",
            ".gz",
            ".rar",
            ".7z",
            ".pdf",
            ".doc",
            ".docx",
            ".xls",
            ".xlsx",
            ".ppt",
            ".pptx",
            ".jpg",
            ".jpeg",
            ".png",
            ".gif",
            ".bmp",
            ".svg",
            ".ico",
            ".mp3",
            ".mp4",
            ".avi",
            ".mov",
            ".wmv",
            ".flv",
            ".wav",
            ".log"
          ],
          "description": "File extensions to exclude from token counting"
        },
        "tokenCounter.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size in bytes to process (default: 1MB)"
        },
        "tokenCounter.tokenSuffix": {
          "type": "string",
          "default": "トークン",
          "description": "Suffix to display after token count (e.g., 'トークン' for '[120トークン]')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.0.10",
    "@types/vscode": "^1.96.0",
    "typescript": "^5.8.3",
    "vsce": "^2.15.0"
  },
  "dependencies": {}
}
